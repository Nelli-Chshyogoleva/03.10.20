#include <cstring>
#include <iomanip>
#include <fstream>
#include <iostream>

int main() {
    char infname[1024];
    char outfname[1024];
    string str;
    int rate[256];

    std::cout << "Enter the of the input file: ";
    std::cin.getline(infname, 1024);
    std::ifstream inFile(infname, std::ios_base::binary);
    if (!inFile)
    {
        std::cout << "Can not open this file!" << infname << std::endl;
        return 1;
    }
    inFile.open(infname);
    std::cin.getline(infname, str);
    while (infname) {
        for (int i = 0; i < str.size(); i++)
            rate[(unsigned char)str[i]]++;
        std::cin.getline(infname, str);
    }
    inFile.close();

    int i;
    std::cout << "Enter the name of the output file: " << std::endl;
    std::cin.getline(outfname, 1024);
    std::ifstream outFile(outfname, std::ios_base::binary);
    if (!outFile)
    {
        std::cout << "Can not open this file!" << infname;
        return 2;
    }
    for (i = 0; i < 256; i++) {
        if (rate[i] != 0)

  outFile << (char)i << ' ' << rate[i] << std::endl;
    }
    outFile.close();

    return 0;
}
